<div class="row">
  <div class="col-12 text-center">
    <h1>Which recipe would you like?</h1>
  </div>
</div>
<ul>
  <% @top_five.each_with_index do |top, index| %>
    <div class="product">
      <img src=<%=top.picture_path %> alt="kudoz" class="product-image hidden-xs">
      <div class='product-body'>
        <h3><a href="/what/<%= top.path %>"><%= top.name %></h3>
        <p><%= top.difficulty %></p>
      </div>
      <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
        <li><%= top.prep_time %><a href=""><i class="fa fa-heart"></i></a></li>
        <li><a href=""><i class="fa fa-star"></i></a></li>
      </ul>
    </div>
  <% end %>
</ul>

